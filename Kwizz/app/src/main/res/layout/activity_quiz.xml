<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizActivity"
    android:orientation="vertical"
    android:padding="5dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 1 of 10!"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question content Question content Question content?"
        android:layout_marginBottom="10dp"
        android:textSize="15dp"
        />
    <RadioGroup
        android:id="@+id/rgAnswers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:onClick="answerChecked"
        >

    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        >
        <Button
            android:id="@+id/btBack"
            android:layout_height="wrap_content"
            android:text="@string/btBack"
            android:onClick="goBack"
            android:layout_width="0dp"
            android:layout_weight="1"
            >
        </Button>
        <Button
            android:id="@+id/btConfirm"
            android:layout_height="wrap_content"
            android:text="@string/btConfirm"
            android:onClick="confirm"
            android:layout_width="0dp"
            android:layout_weight="1">
        </Button>
        <Button
            android:id="@+id/btForward"
            android:layout_height="wrap_content"
            android:text="@string/btForward"
            android:onClick="goForward"
            android:layout_width="0dp"
            android:layout_weight="1">
        </Button>

    </LinearLayout>



    <Button
        android:id="@+id/btNewQuiz"
        android:layout_height="wrap_content"
        android:text="@string/btNewQuiz"
        android:onClick="newQuiz"
        android:layout_width="match_parent"
        >
    </Button>


    <Button
        android:id="@+id/btEmail"
        android:layout_height="wrap_content"
        android:text="@string/btEmail"
        android:onClick="sendEmail"
        android:layout_width="fill_parent">
    </Button>
</LinearLayout>