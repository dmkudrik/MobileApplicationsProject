        <!--android:id="@+id/bt"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/bt"-->
        <!--android:onClick="sendMail"-->
        <!--android:layout_width="fill_parent">-->
    <!--</Button>-->
</LinearLayout>