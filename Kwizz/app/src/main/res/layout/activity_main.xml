<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="5dp"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:scaleX="0.85"
        android:scaleY="0.85"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:visibility="gone"
         />
    <EditText
        android:id="@+id/tbEmail"
        android:layout_height="wrap_content"
        android:hint="@string/tbEmail"
        android:inputType="textEmailAddress"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">
    </EditText>
    <Button
        android:id="@+id/btLogin"
        android:layout_height="wrap_content"
        android:text="@string/btLogin"
        android:onClick="login"
        android:layout_width="fill_parent">
    </Button>
    <Button
        android:id="@+id/btGo"
        android:layout_height="wrap_content"
        android:text="@string/btGo"
        android:onClick="openQuiz"
        android:layout_width="fill_parent"
       >

    </Button>
    <Button
        android:id="@+id/btResume"
        android:layout_height="wrap_content"
        android:text="@string/btResume"
        android:onClick="openQuiz"
        android:layout_width="fill_parent"
       >

    </Button>
    <Button
        android:id="@+id/btScores"
        android:layout_height="wrap_content"
        android:text="@string/btScores"
        android:onClick="showScores"
        android:layout_width="fill_parent"
       >
    </Button>
